# 服务配置
NODE_ENV=development
PORT=3000

# 数据库配置
DATABASE_URL=sqlite:./data/webseal.db

# 存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Puppeteer 配置
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-gpu

# 安全配置
JWT_SECRET=your_jwt_secret_change_in_production
CORS_ORIGIN=*

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/webseal.log

# API 配置
API_RATE_LIMIT=100
API_TIMEOUT=60000

# 水印配置
WATERMARK_ALGORITHM=LSB
WATERMARK_STRENGTH=1

# 清理配置
CLEANUP_DAYS=30
CLEANUP_ENABLED=true
